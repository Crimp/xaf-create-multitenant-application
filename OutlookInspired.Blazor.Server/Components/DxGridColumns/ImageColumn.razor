@using DevExpress.ExpressApp.Blazor.Services
@using OutlookInspired.Blazor.Server.Components
@inject IImageUrlService ImageUrlService;

<DxGridDataColumn FieldName="@FieldName" VisibleIndex="@VisibleIndex" Width="@Width.ToString()">
    <CellDisplayTemplate>
        <XafImg Height="@Height" Width="@Width" Value="@context.Value" AltText="@AltText"/>
    </CellDisplayTemplate>
</DxGridDataColumn>

@code {
    [Parameter]
    public string FieldName { get; set; }
    [Parameter]
    public int VisibleIndex { get; set; }
    [Parameter]
    public int Width { get; set; } = 30;
    [Parameter]
    public int Height { get; set; } = 30;
    [Parameter]
    public string AltText { get; set; }
    protected override void OnParametersSet(){
        if (string.IsNullOrEmpty(AltText)){
            AltText = FieldName;
        }
    }
    
}