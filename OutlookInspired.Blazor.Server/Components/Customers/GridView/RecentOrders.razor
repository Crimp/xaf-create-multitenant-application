@using OutlookInspired.Module.BusinessObjects

<DxGrid Data="Orders" PageSizeSelectorVisible="true" PageSize="Orders.Count" AllowSelectRowByClick="true" >
    <Columns>
        <DxGridDataColumn FieldName="@nameof(Order.InvoiceNumber)"/>
        <DxGridDataColumn FieldName="@nameof(Order.Employee)" />
        <DxGridDataColumn FieldName="@nameof(Order.OrderDate)" SortIndex="0" />
        <DxGridDataColumn FieldName="@nameof(Order.ShipDate)" />
        <DxGridDataColumn FieldName="@nameof(Order.SaleAmount)" />
        <DxGridDataColumn FieldName="@nameof(Order.ShippingAmount)" />
        <DxGridDataColumn FieldName="@nameof(Order.TotalAmount)" />
    </Columns>
    <TotalSummary>
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Count" FieldName="@nameof(Order.InvoiceNumber)" />
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Sum" FieldName="@nameof(Order.SaleAmount)" />
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Sum" FieldName="@nameof(Order.TotalAmount)" />
        <DxGridSummaryItem SummaryType="GridSummaryItemType.Sum" FieldName="@nameof(Order.ShippingAmount)" />
    </TotalSummary>
</DxGrid>

@code {
    [Parameter]
    public List<Order> Orders { get; set; } 
}