@using OutlookInspired.Module.Services.Internal
@using OutlookInspired.Blazor.Server.Components.CardView
<StackedCardView>
    <Content>
        @foreach (var customer in ComponentModel.Customers){
            <SideBySideInfoCard Image="@customer.Logo.ToBase64Image()"HeaderText="@customer.Name" 
                                InfoItems="@(new Dictionary<string, string>{{ "HOME OFFICE", customer.HomeOfficeLine },
                                               { "BILLING ADDRESS", customer.BillingAddressLine } })"/>
        }
    </Content>
</StackedCardView>

@code {
    [Parameter]
    public Model ComponentModel { get; set; }
    public static RenderFragment Create(Model model)
        => @<CardView ComponentModel=@model />;
}