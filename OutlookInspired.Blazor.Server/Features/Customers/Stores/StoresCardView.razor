@using OutlookInspired.Module.Services.Internal
@using OutlookInspired.Blazor.Server.Components.CardView
<StackedCardView>
    <Content>
        @foreach (var store in ComponentModel.Stores){
            <StackedInfoCard Body="@store.City" Image="@store.Crest.LargeImage.ToBase64Image()"/>
        }
    </Content>
</StackedCardView>

@code {
    [Parameter]
    public Model ComponentModel { get; set; }
    public static RenderFragment Create(Model model)
        => @<StoresCardView ComponentModel=@model />;
}