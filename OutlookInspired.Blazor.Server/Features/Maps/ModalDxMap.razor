@inject IJSRuntime JS;
@using OutlookInspired.Blazor.Server.Components.DevExtreme.Maps
@using OutlookInspired.Blazor.Server.Services
<DxMap ComponentModel="ComponentModel" CustomizeModel="UpdateHeight"></DxMap>
@code {
    [Parameter]
    public DxMapModel ComponentModel { get; set; }

    private async Task UpdateHeight() 
        => ComponentModel.Options.Height = await JS.ModalBodyHeight();


}