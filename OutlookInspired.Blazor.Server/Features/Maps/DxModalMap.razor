@inject IJSRuntime JS;
@using OutlookInspired.Blazor.Server.Components.DevExtreme
@using OutlookInspired.Blazor.Server.Services
<DxMap1 ComponentModel="ComponentModel" CustomizeModel="UpdateHeight"></DxMap1>
@code {
    [Parameter]
    public DxMap1Model ComponentModel { get; set; }

    private async Task UpdateHeight(){
        await JS.EvalAsync(@"window.getClientHeight = (element) => {
    return document.querySelector(element).closest('.dxbl-modal-body').clientHeight;
};");
        var modelHeight = $"{await JS.InvokeAsync<double>("getClientHeight", ".dxbl-modal-body")}";
        ComponentModel.Options.Height = modelHeight;
    }

}